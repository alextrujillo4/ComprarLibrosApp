<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalle_libro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="itesm.mx.a01328426_primerparcial_android_feb17.DetalleLibroActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_libro"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/titulo_libro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textStyle="normal"
                android:text="Titulo_libro"
                android:textSize="21sp"/>
            <TextView
                android:id="@+id/precio_libro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/isbn_libro"
                android:text="Comprar por: $ 00.00"/>

            <TextView
                android:id="@+id/isbn_libro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/existencia_libro"
                android:text="isbn_libro"/>
            <TextView
                android:id="@+id/existencia_libro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="existencia_libro"/>


        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/libro_cantidadAComprar"
            android:text="Cantidad de libros a comprar:" />
        <Spinner
            android:id="@+id/numero_de_libros_spiner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/button_comprar_libro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COMPRAR LIBRO"
        android:textSize="14sp"
        android:background="#FFC107"
        android:textColor="#F5F5F5" />

    <Button
        android:id="@+id/button_cancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:text="CANCELAR"
        android:textSize="14sp"/>

</LinearLayout>
